docker build -t symfony-nginx nginx

docker build -t symfony-php php-fpm

docker network create -d bridge my_net

docker run -d -v $HOME/symfony-app/code/:/var/www/ --network=my_net --name php symfony-php

docker run -d -p 8000:80 -v $HOME/symfony-app/code/:/var/www/ --network=my_net --name nginx symfony-nginx

docker run -d -p 3306:3306 -e MYSQL_ROOT_PASSWORD=root --network=my_net --name mariadb mariadb:10.3

docker run --rm -it \
        -v $HOME/symfony-app/code/:/app \
        -v $HOME/symfony-app/composer:/tmp \
        -u $(id -u):$(id -g) \
        composer create-project symfony/website-skeleton my_app


docker run --rm -it \
        -v $HOME/symfony-app/code/:/app \
        -v $HOME/symfony-app/composer:/tmp \
        -u $(id -u):$(id -g) \
        composer create-project symfony/symfony-demo my_app

docker run --rm -it \
        -v $HOME/symfony-app/code/my_app:/app \
        -v $HOME/symfony-app/composer:/tmp \
        -u $(id -u):$(id -g) \
        composer require symfony/orm-pack

docker run --rm -it \
        -v $HOME/symfony-app/code/my_app:/app \
        -v $HOME/symfony-app/composer:/tmp \
        -u $(id -u):$(id -g) \
        composer require symfony/maker-bundle
    